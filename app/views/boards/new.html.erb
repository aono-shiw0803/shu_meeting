<div class="boards-new">
    <div class="boards-new-title">
        <p>掲示板を作成する</p>
    </div>
    <div class="boards-new-main">
        <%= form_for @board do |b| %>
          <%= b.hidden_field :user_id, required: true, :value => current_user.id %>
          <p>－タイトル－<br>
          <span>※必須[35文字以内]</span></p>
          <%= b.text_field :title, :class => "boards-new-content1" %>
          <p>－開催日－</p>
          <%= b.date_field :day, :class => "boards-new-content1" %>
          <p>－開催時間－</p>
          <%= b.time_field :times, :class => "boards-new-content1" %>
          <p>－場所－<br>
          <span>※必須[11文字以内]</span></p>
          <%= b.text_field :place, :class => "boards-new-content1" %>
          <p>－写真－</p>
          <%= b.file_field :image, :class => "boards-new-content3" %>
          <p>－投稿内容－<br>
          <span>※必須[300文字以内]</span></p>
          <%= b.text_area :content, :size=>"20x7", :class => "boards-new-content2" %>
          <br>
          <ul>
              <li><a class="boards-new-btn1" href="/users/<%= current_user.id %>">マイページに戻る</a></li>
              <li><%= b.submit "投稿する", :class => "boards-new-btn2", data: {confirm: '投稿してもよろしいでしょうか？'} %></li>
          </ul>
        <% end %>
    </div>
</div>