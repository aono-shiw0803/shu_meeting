<div class="answer-index">
    <div class="answer-index-title">
        <h1><%= @inquiry.name %>さんへの回答一覧</h1>
    </div>
    <div class="answer-index-main">
        <% if @answers.present? %>
          <% @answers.each do |a| %>
            <div clss="answer-index-text">
                <%= a.answer %>
            </div>
            <div class="answer-index-time">
                <%= a.created_at.strftime("%Y/%m/%d %H:%M") %>
            </div>
          <% end %>
        <% else %>
          <div class="answer-index-empty">
              まだ回答をしていません。
          </div>
          <div class="answer-index-answer-btn">
              <%= link_to "回答する", "/inquiries/#{@inquiry.id}/answers/new" %>
          </div>
        <% end %>
    </div>
</div>